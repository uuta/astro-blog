---
import { SITE } from "@config";
import Posts from "@layouts/Posts.astro";
import getPageNumbers from "@utils/getPageNumbers";
import { getCollection } from "astro:content";
import { fetchZennArticles } from "@infrastructure/zenn/fetchZennArticles";
import { getMergedArticles } from "@utils/getMergedArticles";

const posts = await getCollection("blog", ({ data }) => !data.draft);
const zennArticles = await fetchZennArticles();

// Merge blog posts and Zenn articles
const mergedArticles = getMergedArticles(posts, zennArticles);

const totalPages = getPageNumbers(mergedArticles.length);

const paginatedPosts = mergedArticles.slice(0, SITE.postPerPage);
---

<Posts posts={paginatedPosts} pageNum={1} totalPages={totalPages.length} />
